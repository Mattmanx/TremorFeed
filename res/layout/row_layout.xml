<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:minHeight="80dp"
    android:weightSum="1.0">
    <TextView
        android:id="@+id/row_magFloor"
        android:gravity="center"
        android:text="@string/default_row_mag"
        android:textSize="40dp"
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight=".2" />
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight=".8"
        android:orientation="vertical">
	    <!-- Need to use a theme for some of these attributes. -->
	    <TextView
	        android:id="@+id/row_title"
	        android:text="@string/default_row_text" 
	        android:gravity="center"
	        android:textSize="18dp"
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content"
	        android:singleLine="true"
	        android:ellipsize="end" 
	        android:textStyle="bold"/>
	    
	    <TextView
	        android:id="@+id/row_date_time"
	        android:layout_width="wrap_content"
	        android:text="@string/default_row_date"
	        android:textSize="18dp"
	        android:gravity="center"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/row_lat_long"
	        android:layout_width="wrap_content"
	        android:text="@string/default_row_lat_long"
	        android:textSize="16dp"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:textStyle="italic" />"
    </LinearLayout>
</LinearLayout>